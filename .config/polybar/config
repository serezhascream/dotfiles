[global/wm]
margin-bottom = 0
pseudo-transparency = true

[displays]
main = ${env:MAIN_DISPLAY}
second = ${env:SECOND_DISPLAY}

[colors]
background         = ${xrdb:*.background}
#background-lighten = ${xrdb:*.color0}
background-lighten = ${xrdb:*.color16}
foreground         = ${xrdb:*.foreground}
red                = ${xrdb:*.color1}
orange             = ${xrdb:*.color11}
yellow             = ${xrdb:*.color3}
lightblue          = ${xrdb:*.color4}
blue               = ${xrdb:*.color6}
darkgray           = ${xrdb:*.color8}
green              = ${xrdb:*.color17}


[bar/main]
monitor = ${displays.main}
width = 100%
height = 25

background = ${colors.background}
foreground = ${colors.foreground}

line-color = ${colors.background}
line-size = 25

spacing = 0
padding-right = 2
module-margin = 1

override-redirect = true
wm-restack = bspwm

font-0 = Hack:size=10;2
font-1 = Hack:size=11;2
font-2 = MaterialIcons-Regular:size=14;3
font-3 = FontAwesome:size=14;2

modules-left = bspwm
modules-center = player
modules-right = cpu memory xkeyboard pulseaudio mic-volume battery time

[bar/second]
monitor = ${displays.second}
width = 100%
height = 25

override-redirect = true
wm-restack = bspwm

background = ${colors.background}

line-color = ${colors.background}
line-size = 25

spacing = 0
padding-right = 1
module-margin = 1

font-0 = Hack:size=8;2
font-1 = Hack:size=8;2
font-2 = MaterialIcons:size=11;3
font-3 = FontAwesome:size=11;3

modules-left = bspwm
modules-center = player
modules-right = cpu memory wireless-network xkeyboard pulseaudio mic-volume battery time

[module/xkeyboard]
type = internal/xkeyboard

; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock

format = <label-layout>

label-layout = %layout%
label-layout-padding = 0
label-layout-background = ${colors.background}
label-layout-foreground = ${colors.foreground}

[module/bspwm]
type = internal/bspwm

pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false
fuzzy-match = true

; ws-icon-[0-9]+ = <label>;<icon>
; NOTE: The <label> needs to match the name of the i3 workspace
; Neither <label> nor <icon> can contain a semicolon (;)
ws-icon-1 = 1;
ws-icon-2 = 2;
ws-icon-3 = 3;
ws-icon-4 = 4;
ws-icon-5 = 5;5
ws-icon-6 = 6;6
ws-icon-7 = 7;7
ws-icon-8 = 8;8
ws-icon-9 = 9;9
ws-icon-0 = 0;
ws-icon-default = y
; NOTE: You cannot skip icons, e.g. to get a ws-icon-6
; you must also define a ws-icon-5.
; NOTE: Icon will be available as the %icon% token inside label-*

format = <label-state> <label-mode>

label-mode = %icon%
label-mode-padding = 0
label-mode-background = ${colors.green}

label-focused = %name%
label-focused-foreground = ${colors.red}
label-focused-background = ${colors.background-lighten}
label-focused-padding = 1

label-occupied = %name%
label-occupied-padding = 1
label-occupied-foreground = ${colors.foreground}

label-visible = %name%
label-visible-padding = 1

label-urgent = %name%
label-urgent-foreground = ${colors.background}
label-urgent-background = ${colors.red}
label-urgent-padding =1

label-empty = %name%
label-empty-padding = 1
label-empty-foreground = ${colors.darkgray}

;label-monocle = 
;label-tiled = 
;label-fullscreen = 
;label-floating = 
;label-pseudotiled = P
;label-locked = 
;label-locked-foreground = ${colors.red}
;label-sticky = 
;label-sticky-foreground = ${colors.yellow}
;label-private = 
;label-private-foreground = ${colors.red}
;label-marked = M

[module/cpu]
type = internal/cpu
interval = 0.5
